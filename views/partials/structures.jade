.structure(ng-repeat='structure in structures', ng-controller="StructureController", ng-class="structure.class()")
	h2.name {{structure.name}}
	.status
	.nest(ng-repeat='nest in structure.devices', ng-controller="NestController", ng-class="nest.runningState()")
		.name {{nest.name}}
		.status
		.current_temperature {{nest.current_temperature|C2F}}
		.target_temperatures(ng-class="nest.target_temperature_type")
			.target_temperature {{nest.target_temperature|C2F}}
			.target_temperature_low {{nest.target_temperature_low|C2F}}
			.target_temperature_high {{nest.target_temperature_high|C2F}}
		.clear